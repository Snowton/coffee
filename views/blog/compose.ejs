<%- include("partials/header") %> 
<h1>Compose</h1>
<form action="/compose/<%= post.url %>" method="post">
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= post.title ? post.title : "" %>">
    </div>
    <div>
        <label for="message">Post</label>
        <textarea name="message" cols="30" rows="10"><%= post.body ? post.body : "" %></textarea>
    </div>
    <button type="submit">Publish</button>
</form>
<%- include("partials/footer") %> 